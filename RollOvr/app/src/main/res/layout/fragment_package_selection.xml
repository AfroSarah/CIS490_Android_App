<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#69D2E7"
    android:id="@+id/fragPackage"
    android:weightSum="1">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3">

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_TP12"
            android:src="@drawable/button_tp_12"
            android:contentDescription="12 pack toilet paper"
            android:layout_gravity="left"
            android:theme="@style/AppTheme" />

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_TP24"
            android:layout_gravity="left"
            android:src="@drawable/button_tp_24"
            android:contentDescription="24 pack toilet paper"
            android:theme="@style/AppTheme" />

        <ImageButton
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_TP48"
            android:src="@drawable/button_tp_48"
            android:contentDescription="48 pack toilet paper"
            android:layout_gravity="left"
            android:theme="@style/AppTheme" />
    </GridLayout>

    <Button
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:text="CONTINUE"
        android:id="@+id/nextPage"
        android:onClick="nextPage"
        android:textSize="36dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>