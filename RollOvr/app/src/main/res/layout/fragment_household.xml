<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fragHouseHold"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#69D2E7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Household Details"
        android:id="@+id/textTitle"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:autoText="false"
        android:editable="false"
        android:textSize="24dp"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select number of residents."
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_margin="10dp"/>


    <Spinner
        android:id="@+id/household_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:prompt="@string/householdPrompt"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select toilet paper ply."
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="3"
        android:layout_gravity="center"
        android:id="@+id/ply_grid"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imageButton_onePly"
            android:src="@drawable/button_tp_1_ply"
            android:contentDescription="One Ply"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:theme="@style/AppTheme" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imageButton_twoPly"
            android:src="@drawable/button_tp_2_ply"
            android:contentDescription="Two Ply"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:theme="@style/AppTheme" />

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:id="@+id/imageButton_threePly"
            android:src="@drawable/button_tp_3_ply"
            android:contentDescription="Three Ply"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:theme="@style/AppTheme" />
    </GridLayout>

    <Button
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:text="CONTINUE"
        android:id="@+id/household_button"
        android:onClick="nextPage"
        android:textSize="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />

</LinearLayout>